<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/include_toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/sort_type_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="详细分类"/>
            <cn.bingoogolapple.flowlayout.BGAFlowLayout
                android:id="@+id/sort_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:fl_horizontalChildGap="8dp"
                app:fl_verticalChildGap="8dp"
                app:fl_isDistributionWhiteSpacing="false"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="排序类型"/>
            <cn.bingoogolapple.flowlayout.BGAFlowLayout
                android:id="@+id/sort_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:fl_horizontalChildGap="8dp"
                app:fl_verticalChildGap="8dp"
                app:fl_isDistributionWhiteSpacing="false"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="你想看到的用户"/>
            <cn.bingoogolapple.flowlayout.BGAFlowLayout
                android:id="@+id/sort_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:fl_horizontalChildGap="8dp"
                app:fl_verticalChildGap="8dp"
                app:fl_isDistributionWhiteSpacing="false"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="消费方式"/>
            <cn.bingoogolapple.flowlayout.BGAFlowLayout
                android:id="@+id/sort_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:fl_horizontalChildGap="8dp"
                app:fl_verticalChildGap="8dp"
                app:fl_isDistributionWhiteSpacing="false"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="约会时间"/>
            <cn.bingoogolapple.flowlayout.BGAFlowLayout
                android:id="@+id/sort_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:fl_horizontalChildGap="8dp"
                app:fl_verticalChildGap="8dp"
                app:fl_isDistributionWhiteSpacing="false"
                />
        </LinearLayout>

    </ScrollView>




</LinearLayout>