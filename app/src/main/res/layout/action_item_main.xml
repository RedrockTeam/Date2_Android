<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tool="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="8dp"/>


        <ImageView
            android:id="@+id/ic_person"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_persons_small"
            android:layout_below="@+id/image"
            />

        <TextView
            android:id="@+id/member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Caption"
            tool:text="8äºº"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/ic_person"
            android:layout_alignTop="@+id/ic_person"
            android:layout_alignBottom="@+id/ic_person"
            android:layout_marginLeft="8dp"
            />

        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Caption"
            tool:text="10"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/image"
            android:layout_marginLeft="4dp"
            />
        <ImageView
            android:id="@+id/ic_comment"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_toLeftOf="@id/comment"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_comment_small"
            android:layout_below="@+id/image"
            />

        <TextView
            android:id="@+id/praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Caption"
            tool:text="10"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/ic_comment"
            android:layout_below="@+id/image"
            android:layout_marginLeft="4dp"
            />
        <ImageView
            android:id="@+id/ic_praise"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_toLeftOf="@id/praise"
            android:src="@drawable/ic_praise_black"
            android:layout_below="@+id/image"
            />


    </RelativeLayout>

</android.support.v7.widget.CardView>
