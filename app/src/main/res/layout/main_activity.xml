<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/gray_light">
    <include layout="@layout/include_toolbar"/>
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/background_material_light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="-10dp"
        android:background="@drawable/tab_bg">
        <LinearLayout
            android:id="@+id/date"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="16dp"
            android:paddingBottom="4dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/img_main"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/tab_main_unfocus"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:id="@+id/tv_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/gray_deep"
                android:text="首页"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/action"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/img_find"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/tab_find_unfocus"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:id="@+id/tv_find"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_deep"
                android:textSize="10sp"
                android:text="发现"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/post"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/tab_add"
                android:layout_marginTop="6dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/message"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/img_message"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/tab_message_unfocus"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_deep"
                android:textSize="10sp"
                android:text="消息"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:layout_marginTop="16dp">
            <ImageView
                android:id="@+id/img_user"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/tab_user_unfocus"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:id="@+id/tv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/gray_deep"
                android:text="我的"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
