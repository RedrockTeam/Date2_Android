<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/orange</item>
        <item name="colorPrimary">@color/black_deep</item>
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base"></style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/orange</item>
        <item name="colorPrimary">@color/black_deep</item>
    </style>

    <style name="TransTheme" parent="AppTheme">
        <!--窗体透明-->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="LaunchTheme" parent="Theme.AppCompat.NoActionBar">
    </style>
    <style name="MainTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">false</item>
    </style>



    <style name="Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="Title.Expanded" parent="Title">
        <item name="android:textSize">32sp</item>
    </style>
    <style name="Title.collapsed" parent="Title">
        <item name="android:textSize">@dimen/abc_text_size_title_material_toolbar</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
